package com.example.robloxcms.controllers;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class MainController {

    // Méthode pour afficher la page d'accueil
    @GetMapping("/")
    public String home(Model model) {
        // Si tu veux passer des données à la page, tu peux le faire via le model
        model.addAttribute("message", "Bienvenue sur Roblox Wiki!");
        return "index";  // Ce nom correspond à index.html dans src/main/resources/templates
    }

    // Méthode pour afficher la page Jeux
    @GetMapping("/jeux")
    public String jeux(Model model) {
        // Tu peux ajouter des données à afficher dans la page jeux.html
        model.addAttribute("message", "Liste des jeux Roblox");
        return "jeux";  // Ce nom correspond à jeux.html dans src/main/resources/templates
    }
}
